{
    "name": "rar-co/gold-accounting",
    "description": "Gold Accounting and Financial Management System with advanced features.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,

    "repositories": {
        "packagist.ir": {
            "type": "composer",
            "url": "https://packagist.kr"
        },
        "packagist.org": false
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
            }
        },
        "require": {
        "php": "^8.1",
        "defuse/php-encryption": "^2.4",
        "monolog/monolog": "^3.0",
        "morilog/jalali": "^3.4",
        "nikic/fast-route": "^1.3",
        "robmorgan/phinx": "^0.16.7",
        "spatie/db-dumper": "^3.8",
        "vlucas/phpdotenv": "^5.6",
        "wapmorgan/unified-archive": "^1.2"
    },
        "authors": [
            {
                "name": "Rayan Andish Roshd",
                "email": "info@rar-co.ir"
            }
        ],
        "config": {
            "optimize-autoloader": true,
            "preferred-install": "dist",
            "sort-packages": true,
            "allow-plugins": { 
                 "composer/installers": true
            }
        },
        "scripts": {
            "migrate": "php src/database/migrations/run.php" 
        },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpmetrics/phpmetrics": "^2.8",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5",
        "qossmic/deptrac": "^2.0",
        "vimeo/psalm": "^5.26"
    }
}
